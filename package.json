{
  "name": "smarttext-ssr",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:cloudflare": "npm run build && npm run prepare:cloudflare",
    "prepare:cloudflare": "cp -r dist/smarttext-ssr/browser/* dist/smarttext-ssr/ && cp dist/smarttext-ssr/server/server.mjs dist/smarttext-ssr/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:smarttext-ssr": "node dist/smarttext-ssr/server/server.mjs",
    "deploy:cloudflare": "npm run build:cloudflare && wrangler pages deploy dist/smarttext-ssr",
    "preview:cloudflare": "npm run build:cloudflare && wrangler pages dev dist/smarttext-ssr"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.13",
    "@emailjs/browser": "^4.4.1",
    "@types/compression": "^1.8.1",
    "compression": "^1.8.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "vanilla-jsoneditor": "^3.10.0",
    "web-vitals": "^5.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.13",
    "@angular/cli": "^19.2.13",
    "@angular/compiler-cli": "^19.2.0",
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "wrangler": "^4.44.0"
  }
}
